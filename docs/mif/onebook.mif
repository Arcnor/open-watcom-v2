    # this lowercase help file name in wine
    @%append $(wine_hc_batch) ren $@ xxxxxxxx.tmp
    @%append $(wine_hc_batch) ren xxxxxxxx.tmp $@
    wine cmd /c $(wine_hc_batch)
!else
